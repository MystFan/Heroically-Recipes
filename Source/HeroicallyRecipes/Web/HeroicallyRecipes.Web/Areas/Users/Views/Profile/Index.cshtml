@model HeroicallyRecipes.Web.Models.Profile.UserViewModel

@{
    ViewBag.Title = "Index";
}


@section styles{
    <link href="~/Content/profile.css" rel="stylesheet" />
}

<div class="row">
    <div class="toppad">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="text-center">My Profile</h2>
            </div>
            <div class="panel-body">
                <div class="col-md-3 col-lg-3 text-center">
                    <img alt="User Pic" src="@Model.AvatarUrl" class="img-circle img-responsive">
                </div>

                <div class="col-md-9 col-lg-9">
                    <table class="table table-user-information">
                        <tbody>
                            <tr>
                                <th>E-mail</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Nickname</th>
                                <td>@Model.NickName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Add Recipe", "Create", "Recipes", new { area = "Users" }, new { @class = "btn btn-primary text-center" })
            </div>
        </div>
    </div>
</div>

@Html.Action("GetByNickname", "Recipes", new { nickname = Model.NickName })

